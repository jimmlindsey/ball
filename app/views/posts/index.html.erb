<div class="container"><div class="row">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
      <div class="panel index">
        <div class="panel-heading"></div>
          <div class="post content">
            <% @posts.each do |post| %>
            <br>
              <div class="post">
                <h4>
                  <%= link_to post.title, post, {:style => "color: #47535b"} %><br>
                  <small class="author">Posted by <%= post.user.username %> <%= time_ago_in_words(post.created_at) %> ago â€¢ <%= post.comments.count %> Comments</small>
                </h4>
                <div class="btn-group">
                  <%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-chevron-up"></span>
                    <%= post.get_upvotes.size %>
                  <% end %>

                  <%= link_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-chevron-down"></span>
                    <%= post.get_downvotes.size %>
                  <% end %>
                </div>
              </div>

              <br>

            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>