<header class="navbar navbar-default" role="navigation">
  <div class="navbar-inner">
    <div class="container">
      <div id="logo" class="navbar-brand"><%= link_to image_tag('logo.png', :size => "40x40", alt: 'Yummbler'), root_path, class: "navbar-brand" %>
      <span class="pull-left logo"><small style="color: #47535b">Hoopwall</small></span>
      </div>

      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Post', new_post_path, :class => "btn btn-post" %></li>
          <li class="image-60"><%= link_to image_tag(current_user.avatar.url(:thumb)), user_path(current_user.id)%></li>
        </ul>
        <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Sign In or Up', new_user_session_path, :class => "btn btn-nav" %></li>
        </ul>
      <% end %>

    </div>
  </div>
</header>